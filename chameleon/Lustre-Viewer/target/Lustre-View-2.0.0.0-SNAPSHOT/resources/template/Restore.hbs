{{#each this}}
<div class="form-check mb-3">
	<input class="backup-files form-check-input" type="checkbox" data-disk_type_name="{{disk_type_name}}" data-node_type_name="{{node_type_name}}" value="{{fullpath_name}}" data-host_name="{{node_info.host_name}}"  id="{{@index}}-filepath" data-index="{{@index}}">
	<label class="form-check-label" for="{{@index}}-filepath">
		{{disk_type_name}} {{node_type_name}}:{{origin_disk_name}} {{fullpath_name}}
	</label>
</div>
<div class="form-inline">
    <select id="{{@index}}-device" data-host_name="{{node_info.host_name}}" class="restore-device-name form-control col-3 ml-3">
   	<option value="">SELECT DISK</option>
    {{#each device_list}}
   	<option value="{{name}}" {{#if is_disabled}}disabled="disabled"{{/if}} size="({{size}}">{{../disk_type_name}}:{{name}} ({{size}})</option>
   	{{/each}}
    </select>
    <div data-target="{{@index}}-device" class="restore-result col-3 ml-3" style=""></div>
</div>
{{/each}}