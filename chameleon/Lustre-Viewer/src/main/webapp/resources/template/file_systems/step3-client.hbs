{{#each this}}
<div class="mt-3">
	<h5>{{host_name}} Client IO network</h5>
	<div class="form-inline mt-3">
		<div class="form-group col-4 px-0">
			<select id="{{host_name}}-network" data-host-name="{{host_name}}" class="client-network form-control col-12"> 
				{{#each network_list}}
				<option value="{{name}}" data-type="{{type}}">{{name}} ({{type}})</option> 
				{{/each}}
			</select>
		</div>
		<div class="form-group col-4 px-0 ml-3">
			<input type="text" id="{{host_name}}-network_option" class="client-network-option form-control col-12" value="{{network_option}}">
		</div>
	</div>
</div>
{{/each}}
