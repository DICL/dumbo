<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>YARNJOBMONITORSERVICE</name>
            <displayName>YARNJobMonitorService</displayName>
            <comment>YARN Application Monitoring Service.</comment>
            <version>0.1</version>
            <components>
                <component>
                    <name>YARNJobMonitorMaster</name>
                    <displayName>YARNJobMonitorMaster</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <commandScript>
                        <script>scripts/yarnjobmonitormaster.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>YARNJobMonitorClient</name>
                    <displayName>YARNJobMonitorClient</displayName>
                    <category>CLIENT</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/yarnjobmonitorclient.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
            </components>
            <commandScript>
                <script>scripts/service_check.py</script>
                <scriptType>PYTHON</scriptType>
                <timeout>300</timeout>
            </commandScript>
            <configuration-dependencies>
                <config-type>yarnjobmonitor-config-env</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>