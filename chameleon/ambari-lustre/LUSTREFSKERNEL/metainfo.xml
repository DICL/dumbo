<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>LUSTREFSKERNEL</name>
            <displayName>LustreFSKernel</displayName>
            <comment>LustreFSKernel Install/Reboot.</comment>
            <version>0.1</version>
            <components>
                <component>
                    <name>LustreFSKernelMaster</name>
                    <displayName>LustreFSKernelMaster</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <commandScript>
                        <script>scripts/lustrefskernelmaster.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                    <customCommands>
                        <customCommand>
                          <name>REBOOT</name>
                          <commandScript>
                            <script>scripts/lustrefskernelmaster.py</script>
                            <scriptType>PYTHON</scriptType>
                            <timeout>600</timeout>
                          </commandScript>
                        </customCommand>
                        <customCommand>
                          <name>SWITCHTOHDFS</name>
                          <background>true</background>
                          <commandScript>
                            <script>scripts/lustrefskernelmaster.py</script>
                            <scriptType>PYTHON</scriptType>
                          </commandScript>
                        </customCommand>                        
                      </customCommands>
                </component>
                <component>
                    <name>LustreFSKernelClient</name>
                    <displayName>LustreFSKernelClient</displayName>
                    <category>CLIENT</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/lustrefskernelclient.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
            </components>
        </service>
    </services>
</metainfo>