<view>
  <name>AccountManager_View</name>
  <label>AccountManager View</label>
  <version>1.1.0</version>
  
  <parameter>
    <name>SSH_URL</name>
    <description>LDAP Server SSH URL</description>
    <label>input text for SSH URL</label>
    <placeholder>127.0.0.1</placeholder>
    <default-value></default-value>
    <required>true</required>
  </parameter>
  <parameter>
    <name>SSH_User_ID</name>
    <description>LDAP Server SSH User ID</description>
    <label>LDAP Server User ID</label>
    <placeholder>root</placeholder>
    <default-value></default-value>
    <required>true</required>
  </parameter>
  <parameter>
    <name>SSH_User_PASSWORD</name>
    <description>LDAP Server SSH User Password</description>
    <label>LDAP Server SSH User Password</label>
    <placeholder></placeholder>
    <default-value></default-value>
    <required>true</required>
  </parameter>
  <parameter>
    <name>LDAP_MANAGER_NAME</name>
    <description>LDAP Manager Name</description>
    <label>LDAP Server LDAP Manager Name</label>
    <placeholder>Manager</placeholder>
    <default-value></default-value>
    <required>true</required>
  </parameter>
  <parameter>
    <name>LDAP_MANAGER_PASSWORD</name>
    <description>LDAP Manager Password</description>
    <label>LDAP Server LDAP Manager Password</label>
    <placeholder></placeholder>
    <default-value></default-value>
    <required>true</required>
  </parameter>
  <parameter>
    <name>LDAP_DOMAIN_COMPONENT</name>
    <description>LDAP Domain Component</description>
    <label>LDAP Domain Component</label>
    <placeholder>dc=xiilab,dc=com</placeholder>
    <default-value></default-value>
    <required>true</required>
  </parameter>
  <resource>
    <name>configurations</name>
    <service-class>com.xiilab.ldap.config.LdapDAO</service-class>
  </resource>

</view>
